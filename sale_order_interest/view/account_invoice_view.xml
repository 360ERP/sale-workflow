<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data noupdate="0">

    <record id="invoice_form" model="ir.ui.view">
      <field name="name">account.invoice.form</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_form"/>
      <field name="arch" type="xml">
        <field name="payment_term" position="replace">
          <label for="payment_term"/>
          <div>
            <field name="payment_term" class="oe_inline"/>
            <button name="update_interest_line" states="draft,proforma2"
              string="(update interests)" class="oe_link"
              type="object" help="Recompute interests on payment terms"/>
          </div>
        </field>
        <xpath expr="//field[@name='invoice_line']/tree" position="inside">
          <!-- keep the value that is used in the onchange -->
          <field name="interest_line" invisible="1"/>
        </xpath>
      </field>
    </record>
  </data>
</openerp>
