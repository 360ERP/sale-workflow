<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="sale_order_bundle_form_view" model="ir.ui.view">
            <field name="name">sale.order.bundle.form.view</field>
            <field name="model">sale.order.bundle</field>
            <field name="arch" type="xml">
                <form string="Add bundle in sale order line" version="7.0">
                    <group>
                        <field name="product_bundle_id"/>
                        <field name="quantity"/>
                    </group>
                    <footer>
                        <button name="add_bundle" string="Add bundle" 
                                type="object" class="oe_highlight"/>
                         or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_open_wizard_sale_order_bundle" model="ir.actions.act_window">
            <field name="name">Add bundle in sale order</field>
            <field name="res_model">sale.order.bundle</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_order_bundle_form_view"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
